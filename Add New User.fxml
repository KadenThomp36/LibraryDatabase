<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="342.0" style="-fx-background-color: #3b3d40;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Forms.AddNewUser">
   <children>
      <VBox alignment="TOP_CENTER" layoutY="-1.0" prefHeight="400.0" prefWidth="342.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" prefWidth="342.0" style="-fx-background-color: #c96b18;" text="New User Registration">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="342.0" spacing="10.0">
               <children>
                  <Label text="Name" textFill="WHITE" />
                  <TextField fx:id="txtName" prefHeight="26.0" prefWidth="206.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="342.0" spacing="10.0">
               <children>
                  <Label text="Email" textFill="WHITE" />
                  <TextField fx:id="txtEmail" prefHeight="26.0" prefWidth="206.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="98.0" prefWidth="342.0" spacing="10.0">
               <children>
                  <Label text="Address" textFill="WHITE" />
                  <TextArea fx:id="txtAddress" prefHeight="98.0" prefWidth="206.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="342.0" spacing="10.0">
               <children>
                  <Label text="User Type" textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <RadioButton fx:id="rdoStudent" mnemonicParsing="false" text="Student" textFill="WHITE" />
                  <RadioButton fx:id="rdoFaculty" mnemonicParsing="false" text="Faculty" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="85.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="342.0" spacing="10.0">
               <children>
                  <Label text="Date Of Birth" textFill="WHITE" />
                  <DatePicker fx:id="dtpDateOfBirth" />
               </children>
            </HBox>
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#RegisterUser" style="-fx-background-color: #4d6f82;" text="Register" textFill="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
